page{ background-color: #f5f5f5;}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #ffffff;
  border-top: 1px solid #fafafa;
  min-height: 48px;
  width: 100%;
  text-align: center;
}
.footer .row .border-right{
  border-right: 1px solid #f3f3f3;
}
.footer .row button.col.col-50{ background-color: transparent;}
.left_view .p{ position: relative; text-align: center; color:#ff6d42; font-size: 16px; line-height: 48px; font-weight: bold; width: 50%; float: left;}
.left_view .p::after{content: ''; position: absolute; right: -1px; top: 4px; height: 40px; width: 1px; background-color: #e7e7e7;}
.left_view .yh{ color:#999999; font-size: 13px; line-height: 48px; width: 50%; float: left;}
.footer .row .col.col-50 .one,.footer .row .col.col-50 .two{
  height: 24px;
  line-height: 24px;
  text-align: left;
  padding-left: 16px;
  font-size: 13px;
  color: #444444;
}
.footer .row .col.col-50 .two text{
  color: #ff6d42;
}
.section{
  width: 96%;
  padding: 5px 2%;
  margin: 10px 0;
  background: #f3f3f3;
  border: 1px solid #eee;
  font-size: 14px;
  
}
.block{
  padding:4px 8px;
  margin: 12px;
  font-size: 14px;
  background: #f3f3f3;
  border: 1px solid #eee;
  border-radius: 4px;
  color: #888888;
}
.flex-item{
  width: 50%;
  float: left;
  margin: 16px 0;
}
.flex-item.left{
  padding-top: 14px;
  font-size: .7rem;
}
.flex-item.right{
  font-size: 1.3rem;
  text-align: right;
  font-weight: bold;
}
.hr{
  width: 98%;
  margin: auto 1%;
  height: 1px;
  background-color: #fafafa;
}
.item{ font-size: 15px;}
.item-input.has-line{
  border-bottom: 1px solid #e7e7e7;
}
.item-input .has-line{
  border-bottom: 1px solid #e7e7e7;
  padding: 3px 5px 0;
}
.sex{
  border-bottom: 1px solid #e7e7e7;
}
.sex .col.col-80{
  padding-left: 8px;
}
.sex .col.col-80 .row .col-20{
    position: relative;
    padding-left: 36px;
    font-size: 14px;
    height: 34px;
    line-height: 34px;
}
.sex .col.col-80 .row .col-20 image{
  width: 17px;
  height: 18px;
  position: absolute;
  left: 10px;
  top: 7px;
}
.list.light-bg .item{
  border-bottom: 1px solid #e7e7e7;
  position: relative;
  height: 90px;
  padding-left: 100px;
}
.list.light-bg .item image{
  width: 70px;
  height: 70px;
  position: absolute;
  left: 20px;
  top: 10px;
}
.list.light-bg .item .h2{
  font-size: 16px;
  color: #000000;
  padding: 8px 2px;
}
.list.light-bg .item .p{
  font-size: 17px;
  font-weight: bold;
  color: #ff6d42;
  padding: 0 2px;
}
.quan > .col-20{ text-align: center; font-size: 15px; padding: 12px 0;}
.quan .col-80 .row{
  border-bottom: 1px solid #e7e7e7;
  font-size: 13px;
  padding:14px 0;
}
.quan .col-80 .row:last-child{
  border:0;
}
.quan .col-80 .row .col:first-child{
  position: relative;
}
.quan .col-80 .row .col:first-child view{
  padding-left: 30px;
}
.quan .col-80 .row .col:first-child image{
  position: absolute;
  left: 2px;
  top: calc(50%-10px);
  width: 20px;
  height: 20px;
}
.quan .col-80 .row .col-20{
  text-align: center;
  color: #999999;
}
.quan .col-80 .row .col-30{
  text-align: center;
  color: #ff6d42;
}
.sub-info{
  position: relative;
  padding-bottom: 12px;
}
.sub-info view{
  font-size: 13px;
  color:#666666;
  padding:12px 0;
  height: 20px;
  line-height: 20px;
}
.sub-info view:first-child{
  font-size: 15px;
  color:#000000;
  padding:12px 0;
}
.sub-info image{
  position: absolute;
  right: 5px;
  top: calc(50% - 16px);
  width:24px; height:24px;
}
.m-list .item{padding: 8px;}
.m-list .item input{padding:8px 0;}
.hb{font-size: 15px; text-align: center; border-top:1px solid #e7e7e7; border-bottom: 1px solid #e7e7e7; padding: 12px 0;}
.hb .col-70 {text-align: right;color:#ff6d42;}
.hb .col-70 text{font-size: 12px;}
.hb .col-10{ position: relative; }
.hb .col-10 image{ position: absolute; right: 8px; top: 4px;}

.xj{
  padding: 12px;
  text-align: right;
  color:#444444;
  font-size: 13px;
}
.xj text{ font-size: 12px;}
.xj .p{ font-size: 18px;}